{
  "openapi": "3.0.0",
  "info": {
    "version": "v1.0.0",
    "title": "Parking API",
    "description": "Implementation of Swagger with TypeScript"
  },
  "servers": [
    {
      "url": "http://localhost:2400",
      "description": ""
    }
  ],
  "paths": {
    "/healthcheck": {
      "get": {
        "tags": [
          "Healthcheck"
        ],
        "summary": "runs healthcheck for api",
        "description": "",
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      }
    },
    "/parking/{plate}": {
      "get": {
        "tags": [
          "Parking"
        ],
        "summary": "List parking entrances by plate",
        "description": "This endpoint will list all entrance registers in the parking lot",
        "parameters": [
          {
            "name": "plate",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Return data for parking",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/parkingListResponse"
                }
              }
            }
          },
          "400": {
            "description": "Bad Request"
          }
        }
      }
    },
    "/parking": {
      "post": {
        "tags": [
          "Parking"
        ],
        "summary": "Create a entrance",
        "description": "This endpoint will create a entrance in the parking lot",
        "responses": {
          "200": {
            "description": "Return the initial data for parking",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/parkingCreateResponse"
                }
              }
            }
          },
          "400": {
            "description": "Bad Request"
          }
        },
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/parkingCreateRequest"
              }
            }
          }
        }
      }
    },
    "/parking/{id}/out": {
      "put": {
        "tags": [
          "Parking"
        ],
        "summary": "Left parking lot",
        "description": "This endpoint will register the exit in the parking lot",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Return the data for parking",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/parkingInfoResponse"
                }
              }
            }
          },
          "400": {
            "description": "Bad Request"
          }
        }
      }
    },
    "/parking/{id}/pay": {
      "put": {
        "tags": [
          "Parking"
        ],
        "summary": "Left parking lot",
        "description": "This endpoint will pay the parking lot",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Return the data for parking",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/parkingInfoResponse"
                }
              }
            }
          },
          "400": {
            "description": "Bad Request"
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "parkingCreateRequest": {
        "type": "object",
        "properties": {
          "plate": {
            "type": "string",
            "example": "string"
          }
        }
      },
      "parkingCreateResponse": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string",
            "example": "string"
          },
          "plate": {
            "type": "string",
            "example": "string"
          },
          "entranceDate": {
            "type": "string",
            "example": "date"
          }
        }
      },
      "parkingInfoResponse": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string",
            "example": "string"
          },
          "plate": {
            "type": "string",
            "example": "string"
          },
          "time": {
            "type": "string",
            "example": "string"
          },
          "paid": {
            "type": "string",
            "example": "boolean"
          },
          "left": {
            "type": "string",
            "example": "boolean"
          }
        }
      },
      "parkingListResponse": {
        "type": "object",
        "properties": {
          "data": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "id": {
                  "type": "string",
                  "example": "string"
                },
                "plate": {
                  "type": "string",
                  "example": "string"
                },
                "time": {
                  "type": "string",
                  "example": "string"
                },
                "paid": {
                  "type": "string",
                  "example": "boolean"
                },
                "left": {
                  "type": "string",
                  "example": "boolean"
                }
              }
            }
          }
        }
      }
    }
  }
}